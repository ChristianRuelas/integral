@model IEnumerable<inmobiliaria.Models.casa>

@{
    ViewBag.Title = "index";

}

<br />
<br />
<div id="fb-root"></div>
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/es_ES/sdk.js#xfbml=1&version=v13.0&appId=946292162476348&autoLogAppEvents=1"
        nonce="lYPqOwYD"></script>
<div class="fb-like" data-href="https://www.facebook.com/Inmobiliaria-Harder-100279225966391" data-width=""
     data-layout="standard" data-action="like" data-size="large" data-share="true"></div>
<h2>Articulos en venta</h2>
<p>
    @if (Session["user"] != null)
    {
        @Html.ActionLink("Agregar articulo en venta", "Guardar");
    }


</p>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <font color="green">@ViewBag.mensaje</font>
    </div>
</div>
<table class="table table-hover table-bordered">
    <tr class="text-capitalize" style="background-color:lightgray">
        <th>
           Id
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.costo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.imagen)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Idcasa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                $ @Html.DisplayFor(modelItem => item.costo) MXN
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.imagen)" width="100" height="100" />

            </td>
            <td>
                @if (Session["user"] != null)
                {
                    @Html.ActionLink("Editar", "Modificar", new { id = item.Idcasa });
                }
                |
                @Html.ActionLink("Ver", "Detalle", new { id = item.Idcasa }) |
                @if (Session["user"] != null)
                {
                    @Html.ActionLink("Eliminar", "Eliminar", new { id = item.Idcasa });
                }





            </td>
        </tr>
    }

</table>
@Html.ActionLink("Recargar pagina", "Index")
